<div class="user-show-container">
  <div class="user-selection">
    <ul class="user-menus">
      <li>
        <%= link_to("Top", root_path) %>
      </li>
      <% if user_signed_in? %>
      <li class="user-logout">
        <%= link_to("logout", destroy_user_session_path, {method: "delete"}) %>
      </li>
      <% end %>
    </ul>
  </div>
  
  <div class="show-head">
    <div class="profile">
      <div class="user-icon">
        <%= image_tag "/hukumen.jpeg" %>
      </div>
      <div class="profile-name">
        <h3><%= @user.name %></h3>
      </div>
    </div>
    <div class="toward-post">
      <h2>please share your story!</h2>
      <%= link_to("New Post", new_post_path, class: "new-post-btn") %>
    </div>
  </div>
  <div class="about-post">
    <h2 class="your-post">Your posts</h2>
    <% if @posts[0] %>
      <div class="posted">
        <% @posts.each do |post| %>
          <div class="own-card">
            <div class="k-head">
              <%= image_tag post.image_name1.url if post.image_name1? %>
              <div class="k-name">
                <h3>@<%= post.user.name %></h3>
              </div>
            </div> 
            <div class="k-middle">
              <ul class="personal">
                <li>国:<%= post.country %></li>
                <li>地域:<%= post.city %></li>
                <li>期間:<%= post.howlong %></li>
                <li>費用:<%= post.money %></li>
              </ul>
            </div>
            <div class="k-foot">
              <%= link_to("MoreInformation", post_path(post.id), class: "info-button") %>
            </div>
          </div>
        <% end %>
      <div>  
    <% else %>
      <div class="not-yet">
        <h2>No posts</h2>
      </div>
    <% end %>
  </div>
</div>

<%= link_to("Edit", edit_user_registration_path) %>