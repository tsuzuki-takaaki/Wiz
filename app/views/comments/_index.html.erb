<p><%= comments.count %>件コメント</p>
<% comments.each do |comment| %>
    <% unless comment.user_id == user.id %>
    <div class="half-right">
        <div class="comment-box right">
            <p class="comment-username">from<%= link_to "@#{comment.user.name}", user_path(comment.user_id) %></p>
            <p class="comment-content"><%= comment.content %></p>
            <p class="comment-time"><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></p>
        </div>
    </div>
    <% else %>
    <div class="half-left">
        <div class="comment-box left">
            <p class="comment-username">from<%= link_to "@#{comment.user.name}", user_path(comment.user_id) %></p>
            <p class="comment-content"><%= comment.content %></p>
            <p class="comment-time"><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></p>
        </div>
    </div>
    <% end %>
<% end %>