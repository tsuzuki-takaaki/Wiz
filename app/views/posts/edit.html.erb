<% @page_title = "Post Edit" %>
<div class="post-edit-container">
    <%= form_with model: @post do |f| %>
    <h1 class="form-heading">Post Edit</h1>
    <div class="form-content">
      <div class="edit-photo">
        <%= image_tag @post.image_name1.url if @post.image_name1? %>
        <%= f.file_field :image_name1, class: "image" %>
      </div>
      <div class="without-photo">
        <div class="county form">
          <%= f.select :country, [["USA", "USA"], ["UK", "UK"], ["Canada", "Canada"], ["Australia", "Australia"], ["NewZealand", "Newzealand"], ["SouthAfrica", "SouthAfrica"], ["Malta", "Malta"], ["thePhilippines", "thePhilippines"]] %>
        </div>
        <div class="city form">
          <%= f.text_field :city, placeholder: "地域" %>
        </div>
        <div class="howlong form">
          <%= f.text_field :howlong, placeholder: "期間" %>
        </div>
        <div class="visa form">
          <%= f.text_field :visa, placeholder: "ビザの種類" %>
        </div>
        <div class="money form">
          <%= f.text_field :money, placeholder: "費用" %>
        </div>
        <div class="school form">
          <%= f.text_field :schoolname, placeholder: "学校名" %>
        </div>
        <div class="agent form">
          <%= f.text_field :agent, placeholder: "エージェント" %>
        </div>
        <div class="necessity form">
            <%= f.text_field :necessity, placeholder: "必需品" %>
        </div>
      </div>
      <div class="submit">
        <%= f.submit "Share", class:"submit-form"%>
      </div>
    </div>
    <% end %>
</div>