<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_with model: @post do |f| %>
      <div class="form">
        <div class="form-body">
          <%= f.text_field :country, value: @post.country %>
          <%= f.text_field :city, value: @post.city %>
          <%= f.text_field :howlong, value: @post.howlong %>
          <%= f.text_field :visa, value: @post.visa %>
          <%= f.text_field :money, value: @post.money %>
          <%= f.text_field :schoolname, value: @post.schoolname %>
          <%= f.text_field :agent, value: @post.agent %>
          <%= f.text_field :necessity, value: @post.necessity %>
          <%= f.submit "保存" %>
        </div>
      </div>
    <% end %>
  </div>
</div>