<!DOCTYPE html>
<html>
  <head>
    <title>Wiz</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <hr>
      <div class="header-logo">
        <ul class="header-menus">
          <li>
          <%= link_to("USA", home_usa_path) %>
          </li>
          <li>
          <%= link_to("UK", home_uk_path) %>
          </li>
          <li>
          <%= link_to("Canada", home_canada_path) %>
          </li>
          <li>
          <%= link_to("Australia", home_australia_path) %>
          </li>
          <li>
          <%= link_to("NewZealand", home_newzealand_path) %>
          </li>
          <li>
          <%= link_to("SouthAfrica", home_southafrica_path) %>
          </li>
          <li>
          <%= link_to("Malta", home_malta_path) %>
          </li>
          <li>
          <%= link_to("thePhilippines", home_philippines_path) %>
          </li>
          <% if user_signed_in? %>
            <li>
              <%= link_to(current_user.name, user_path(current_user.id)) %>
            </li>
            <li>
              <%= link_to("logout", destroy_user_session_path, {method: "delete"}) %>
            </li>
          <% else %>
            <li>
              <%= link_to("login", new_user_session_path) %> 
            <li>
              <%= link_to("Signup", new_user_registration_path) %>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
 
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
